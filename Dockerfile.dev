# Use official Node.js image
FROM node:20-alpine

# Set working directory inside container
WORKDIR /app

# Copy dependency files first (for caching)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy rest of the app
COPY . .

# Expose the Next.js dev port
EXPOSE 3000

# Run the Next.js dev server
CMD ["npm", "run", "dev"]
